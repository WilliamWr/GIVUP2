
<center><h2>Forgot your password?</h2></center>
<div class="panelne">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, class: 'input', placeholder: 'Email' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'input3' %>
  </div>
<% end %>

<strong><%= render "devise/shared/links" %></strong> 
</div>
